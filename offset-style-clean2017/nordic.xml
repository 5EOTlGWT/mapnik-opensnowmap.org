
<!-- White casing -->
<Style name="nordic-bg">
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom9;
		<LineSymbolizer stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
		 stroke="#FFFFFF"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom10;
		&minscale_zoom10;
		<LineSymbolizer stroke-width="3" stroke-linecap="round" stroke-linejoin="round"
		 stroke="#FFFFFF"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom11;
		&minscale_zoom12;
		<LineSymbolizer stroke-width="3.5" stroke-linecap="round" stroke-linejoin="round"
		 stroke="#FFFFFF"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
            &maxscale_zoom13;
            &minscale_zoom14;
		<LineSymbolizer stroke-width="5" stroke-linecap="round" stroke-linejoin="round"
		 stroke="#FFFFFF"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<LineSymbolizer stroke-width="6" stroke-linecap="round" stroke-linejoin="round"
		 stroke="#FFFFFF"  smooth="0" stroke-gamma=".6"/>
	</Rule>
</Style>

<!-- Ways -->
<Style name="nordic">
    
	<Rule>
            &maxscale_zoom9;
            &minscale_zoom9;
		<LineSymbolizer stroke="#29B29C" stroke-width="0.5" stroke-linecap="round"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
            &maxscale_zoom10;
            &minscale_zoom12;
		<LineSymbolizer stroke="#29B29C" stroke-width="1" stroke-linecap="round"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		<Filter>[piste:grooming]='classic' or [piste:grooming]='skating' or [piste:grooming]='classic;skating'  or [piste:grooming]='classic+skating'</Filter>
            &maxscale_zoom13;
            &minscale_zoom14;
		<LineSymbolizer stroke="#29B29C" stroke-width="1.5" stroke-linecap="round"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
            &maxscale_zoom15;
            &minscale_zoom18;
		<Filter>[piste:grooming]='classic' or [piste:grooming]='skating' or [piste:grooming]='classic;skating'  or [piste:grooming]='classic+skating'</Filter>
		<LineSymbolizer stroke="#29B29C" stroke-width="2" stroke-linecap="round"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		<ElseFilter />
            &maxscale_zoom12;
            &minscale_zoom12;
		<LineSymbolizer stroke="#29B29C" stroke-width="1" stroke-linecap="round" stroke-dasharray="3,3"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		<ElseFilter />
            &maxscale_zoom13;
            &minscale_zoom14;
		<LineSymbolizer stroke="#29B29C" stroke-width="1" stroke-linecap="round" stroke-dasharray="5,5"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		<ElseFilter />
            &maxscale_zoom15;
            &minscale_zoom18;
		<LineSymbolizer stroke="#29B29C" stroke-width="1.5" stroke-linecap="round" stroke-dasharray="8,8"  smooth="0" stroke-gamma=".6"/>
	</Rule>
</Style>

<!--eraser to remove way below relations-->
<Style name="eraser" comp-op="dst-out">
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom12;
		<LineSymbolizer stroke-width="3" stroke-linecap="round" stroke-linejoin="round"
		 stroke="#FFFFFF"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom14;
		<LineSymbolizer stroke-width="5" stroke-linecap="round" stroke-linejoin="round"
		 stroke="#FFFFFF"  smooth="0" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<LineSymbolizer stroke-width="7" stroke-linecap="round" stroke-linejoin="round"
		 stroke="#FFFFFF"  smooth="0" stroke-gamma=".6"/>
	</Rule>
</Style>

