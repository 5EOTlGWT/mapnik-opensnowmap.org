<Style name="icons">
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='snow_park'</Filter>
		<PointSymbolizer transform="translate(0,-20)" file="pics/snow_park.png" />
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='ski_jump' or [sport]='ski_jump' or [sport]='ski_jump_take_off'</Filter>
		<PointSymbolizer transform="translate(0,-20)" file="pics/jump.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='sled' </Filter>
		<PointSymbolizer file="pics/sled.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='ice_skate' or [sport]='skating'</Filter>
		<PointSymbolizer file="pics/ice-skate.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='playground' </Filter>
		<PointSymbolizer file="pics/playground.png"/>
	</Rule>
</Style>
       
