<Style name="icons">
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='snow_park'</Filter>
		<PointSymbolizer transform="translate(0,-20)" file="pics/snow_park.png" />
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='ski_jump' or [sport]='ski_jump' or [sport]='ski_jump_take_off'</Filter>
		<PointSymbolizer transform="translate(0,-20)" file="pics/jump.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='sled' </Filter>
		<MarkersSymbolizer file="pics/sled.png"
		placement="line" spacing="400"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='ice_skate' or [sport]='skating'</Filter>
		<MarkersSymbolizer file="pics/ice-skate.png"
		placement="line" spacing="400"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:type]='playground' </Filter>
		<PointSymbolizer file="pics/playground.png"/>
	</Rule>

	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:grooming]='mogul'</Filter>
		<PointSymbolizer file="pics/mogul.svg" transform="scale(0.4,0.4)"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[gladed]='yes' </Filter>
		<PointSymbolizer file="pics/gladed.svg" transform="scale(0.4,0.4)"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[lit]='yes' or [piste:lit]='yes'</Filter>
		<PointSymbolizer file="pics/light.png"/>
	</Rule>
</Style>
<Style name="other-icons">
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[piste:grooming]='mogul'</Filter>
		<ShieldSymbolizer file="pics/mogul.svg" face-name="DejaVu Sans Bold"
		spacing="200" allow-overlap="false"
		placement="line" transform="scale(0.5,0.5)">' '</ShieldSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[gladed]='yes' </Filter>
		<ShieldSymbolizer file="pics/gladed.svg" face-name="DejaVu Sans Bold"
		spacing="200" allow-overlap="true"
		placement="line" transform="scale(0.5,0.5)">' '</ShieldSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[lit]='yes' or [piste:lit]='yes'</Filter>
		<ShieldSymbolizer file="pics/light.png" face-name="DejaVu Sans Bold"
		spacing="200" allow-overlap="true"
		placement="line">' '</ShieldSymbolizer>
	</Rule>
</Style>
