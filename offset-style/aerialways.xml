<Style name="aerialways">
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom18;
		<Filter>[aerialway]='chair_lift' or [aerialway]='gondola'</Filter>
		<LinePatternSymbolizer width="30" height="5" type="png" file="pics/cable_car_line.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom18;
		<ElseFilter />
		<LinePatternSymbolizer width="28" height="3" type="png" file="pics/chair_lift_line.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='station'</Filter>
		<PointSymbolizer file="pics/station.png"/>
	</Rule>
</Style>
<Style name="aerialways-text">
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<TextSymbolizer 
		fontset-name="book-fonts" 
		size="10" fill="black" 
		halo-fill= "white" 
		halo-radius="1" 
		placement="line" 
		dx="10"
		allow-overlap="false">[name]</TextSymbolizer>
	</Rule>
</Style>

<Style name="aerialways-icons">
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[railway]='funicular' or [railway]='incline'</Filter>
		<MarkersSymbolizer file="pics/funicular.svg" placement="line" spacing="500" transform="translate(-10 -10) scale(0.12)"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='cable_car'</Filter>
		<MarkersSymbolizer file="pics/cable_car.svg" placement="line" spacing="500" transform="translate(10 10) scale(0.12)"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='gondola'</Filter>
		<MarkersSymbolizer file="pics/gondola.svg" placement="line" spacing="500" transform="translate(10 10) scale(0.12)"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='chair_lift'</Filter>
		<MarkersSymbolizer file="pics/chair_lift.svg" placement="line" spacing="500" transform="translate(10 10) scale(0.12)"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='mixed_lift'</Filter>
		<MarkersSymbolizer file="pics/mixed_lift.svg" placement="line" spacing="500" transform="translate(10 10) scale(0.12)"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='t-bar' or [aerialway]='j-bar' or [aerialway]='platter' or [aerialway]='rope-tow' or [aerialway]='drag_lift'</Filter>
		<MarkersSymbolizer file="pics/drag_lift.svg" placement="line" spacing="500" transform="translate(10 10) scale(0.12)"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
		<Filter>[aerialway]='magic_carpet'</Filter>
		<MarkersSymbolizer file="pics/magic_carpet.svg" placement="line" spacing="500" transform="translate(10 10) scale(0.12)"/>
	</Rule>
</Style>
