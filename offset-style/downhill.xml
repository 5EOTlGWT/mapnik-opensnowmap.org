<Style name="downhill-text"> 
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='novice' </Filter>
		<TextSymbolizer face-name="DejaVu Sans Book" 
		size="10" fill="#23CD23" halo-fill= "white" halo-radius="1" 
