<Style name="downhill-text-us"> 
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='novice' or [piste:difficulty]='easy'</Filter>
		<TextSymbolizer face-name="DejaVu Sans Book" 
		size="10" fill="#23CD23" halo-fill= "white" halo-radius="1" 
		placement="line" allow-overlap="false" spacing="10000" 
		avoid-edges="true"
		wrap-width="10" dy="10">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[piste:difficulty]='intermediate' </Filter>
