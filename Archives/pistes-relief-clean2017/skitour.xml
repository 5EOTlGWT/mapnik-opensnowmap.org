

<Style name="skitour">
    <!-- erase relations already rendered, otherwise dashs looks ugly -->
    <Rule>
		&maxscale_zoom9;
		&minscale_zoom11;
		<LineSymbolizer comp-op="dst-out" stroke-width="1.5" stroke="#FFFFFF" 
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<LineSymbolizer comp-op="dst-out" stroke-width="4" stroke="#FFFFFF" 
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom14;
		<LineSymbolizer comp-op="dst-out" stroke-width="6" stroke="#FFFFFF" 
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
        <LineSymbolizer comp-op="dst-out" stroke-width="8" stroke="#FFFFFF" 
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
    <!-- style-->
	<Rule>
		&maxscale_zoom9;
		&minscale_zoom11;
		
		<LineSymbolizer stroke-width="1.5" stroke="#C42C1C" 
		stroke-dasharray="1,4"
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		
		<LineSymbolizer stroke-width="4" stroke="#C42C1C" 
		stroke-dasharray="1,9"
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom14;
		
		<LineSymbolizer stroke-width="6" stroke="#C42C1C" 
		stroke-dasharray="1,12"
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		
		<LineSymbolizer stroke-width="7" stroke="#C42C1C" 
		stroke-dasharray="1,16"
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
    <!-- erase the dash center -->
    <Rule>
		&maxscale_zoom9;
		&minscale_zoom11;
		
		<LineSymbolizer comp-op="dst-out" stroke-width="0.8" stroke="#FFFFFF" 
		stroke-dasharray="1,4"
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		
		<LineSymbolizer comp-op="dst-out" stroke-width="2.5" stroke="#FFFFFF" 
		stroke-dasharray="1,9"
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom14;
		
		<LineSymbolizer comp-op="dst-out" stroke-width="4.5" stroke="#FFFFFF" 
		stroke-dasharray="1,12"
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		
		<LineSymbolizer comp-op="dst-out" stroke-width="5.5" stroke="#FFFFFF" 
		stroke-dasharray="1,16"
		stroke-linejoin="round" stroke-linecap="round" stroke-gamma=".6"/>
	</Rule>

</Style>
<Style name="skitour-text">
    <!-- icon -->
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom18;
      <TextSymbolizer fontset-name="ski-fonts"
       size="20" opacity="1" fill="#C42C1C" 
       halo-fill= "rgba(255,255,255,0.5)" halo-radius="2"
       placement="point" repeat-distance="200"
       allow-overlap="false" avoid-edges="true">
       f
      </TextSymbolizer>
    </Rule>
</Style>
